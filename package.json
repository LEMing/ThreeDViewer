{
  "name": "threedviewer",
  "private": false,
  "version": "0.9.1",
  "type": "module",
  "description": "A 3D viewer based on React and Three.js",
  "keywords": [
    "3d",
    "three.js",
    "react",
    "viewer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LEMing/threedviewer.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production tsc && vite build",
    "preview": "vite preview",
    "test": "jest --runInBand",
    "prepublishOnly": "npm run build && npm run test",
    "postpublish": "echo 'Published successfully!'"
  },
  "files": [
    "dist",
    "!dist/__tests__",
    "!dist/__mocks__"
  ],
  "main": "dist/simple-viewer.umd.js",
  "module": "dist/simple-viewer.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/simple-viewer.es.js",
      "require": "./dist/simple-viewer.umd.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "0.168.0",
    "@vitejs/plugin-react": "^4.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.3",
    "vite": "^5.4.1",
    "vite-plugin-dts": "^4.0.3"
  },
  "dependencies": {
    "three-gpu-pathtracer": "^0.0.23",
    "threedgizmo": "0.2.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "0.168.0"
  }
}
